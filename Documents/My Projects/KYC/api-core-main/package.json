{
  "name": "firstcheck-api-core",
  "version": "1.0.0",
  "description": "First Check api core",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "start": "npm run build && npm run serve",
    "start:dev": "npm run build && npm run serve",
    "build": "npm run clean && npm run build-ts",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon -r dotenv/config ./src/bin/www.ts",
    "serve": "node -r dotenv/config build/bin/www.js",
    "eslint": "eslint . --ext .js,.ts --fix",
    "test": "DOTENV_CONFIG_PATH=.env.test jest -c jest.config.js --runInBand --detectOpenHandles --forceExit --passWithNoTests",
    "prepare": "husky install",
    "db-seed": "npm run build && node -r dotenv/config build/database/seeds/index.js",
    "postbuild": "node -r dotenv/config build/database/seeds/index.js",
    "dev": "concurrently --kill-others \"npm run watch-ts\" \"npm run watch-node\""
  },
  "keywords": [
    "KYC",
    "API",
    "FistCheck"
  ],
  "author": "Akomolafe Tosin",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@types/amqplib": "^0.10.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/convict": "^6.1.3",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^18.16.2",
    "@types/nodemailer": "^6.4.15",
    "@types/slug": "^5.0.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.39.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
